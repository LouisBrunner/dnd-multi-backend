{
  "name": "meta",
  "license": "MIT",
  "private": true,
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "clean": "rm -rf packages/*/dist examples/*.js coverage",
    "common:babel": "lerna exec -- babel src --extensions .js,.ts,.tsx --delete-dir-on-start --out-dir",
    "common:webpack": "webpack --mode production",
    "common:types": "lerna exec -- tsc -p ./tsconfig.json --declarationDir",
    "build:types": "npm run common:types -- dist/cjs && npm run common:types -- dist/esm",
    "build:esm": "npm run common:babel -- dist/esm --config-file ../../babel.config.esm.json",
    "build:cjs": "npm run common:babel -- dist/cjs --config-file ../../babel.config.cjs.json",
    "build:umd": "npm run common:webpack -- --config webpack/dist.js",
    "build:examples": "npm run common:webpack -- --config webpack/examples.js",
    "build:all": "npm run build && npm run build:examples",
    "build": "npm run build:esm && npm run build:cjs && npm run build:types && npm run build:umd",
    "analyze:umd": "webpack --mode production --profile --json --config webpack/dist.js > webpack-stats.json",
    "lint": "eslint . && npm run typecheck",
    "typecheck": "tsc --noEmit",
    "test": "jest --config jest.config.js",
    "test:watch": "npm run test -- --watch",
    "test:ci": "CI=yes npm run test",
    "start": "webpack serve --config webpack/dev.js",
    "prepare": "npm run clean && npm run build && npm run lint && npm run test",
    "postinstall": "lerna bootstrap --hoist"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/eslint-parser": "^7.18.9",
    "@babel/eslint-plugin": "^7.18.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@octokit/core": "^4.0.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^5.1.1",
    "@types/jsdom": "^20.0.0",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "acorn": "^8.8.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^29.0.1",
    "babel-loader": "^8.2.5",
    "eslint": "^8.23.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-jest": "^27.0.1",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-testing-library": "^5.6.0",
    "eslint-webpack-plugin": "^3.2.0",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "jest-runner-eslint": "^1.1.0",
    "lerna": "^5.5.0",
    "node-notifier": "^10.0.1",
    "react": "^18.2.0",
    "react-dnd": "^13.1.1",
    "react-dnd-html5-backend": "^12.1.1",
    "react-dnd-test-backend": "^12.0.0",
    "react-dnd-test-utils": "^12.0.0",
    "react-dnd-touch-backend": "^12.0.0",
    "react-dom": "^18.2.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.1",
    "webpack-merge": "^5.8.0"
  }
}
